<Window x:Class="arraylist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arraylist"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="add" Content="add" HorizontalAlignment="Left" Margin="80,84,0,0" VerticalAlignment="Top" Width="75" Click="add_Click"/>
        <Button x:Name="show" Content="show" HorizontalAlignment="Left" Margin="80,162,0,0" VerticalAlignment="Top" Width="75" Click="show_Click"/>
        <Button x:Name="remove" Content="remove" HorizontalAlignment="Left" Margin="80,122,0,0" VerticalAlignment="Top" Width="75" Click="remove_Click"/>
        <TextBox x:Name="infor" HorizontalAlignment="Left" Height="23" Margin="80,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
